<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="app.controllers.SnakeController"
           fx:id="root"
           prefWidth="720" prefHeight="720"
           style="-fx-background-color: #0d0d0f;">

    <!-- Main layout inside the StackPane -->
    <BorderPane prefWidth="720" prefHeight="720">

        <!-- TOP: Header with title and score -->
        <top>
            <VBox alignment="CENTER" spacing="4"
                  style="-fx-padding: 24 32 16 32;
                         -fx-border-color: transparent transparent #1a1a2e transparent;
                         -fx-border-width: 0 0 2 0;">

                <HBox alignment="CENTER_LEFT" spacing="0">
                    <!-- Center: title -->
                    <HBox HBox.hgrow="ALWAYS" alignment="CENTER">
                        <Label text="SNAKE"
                               style="-fx-text-fill: #ffffff;
                                      -fx-font-size: 22;
                                      -fx-font-weight: bold;
                                      -fx-letter-spacing: 6;"/>
                    </HBox>

                 
                </HBox>

                <!-- Score row -->
                <HBox alignment="CENTER" spacing="48" style="-fx-padding: 8 0 0 0;">

                    <VBox alignment="CENTER" spacing="2">
                        <Label text="SCORE"
                               style="-fx-text-fill: #333344;
                                      -fx-font-size: 9;
                                      -fx-font-weight: bold;
                                      -fx-letter-spacing: 2;"/>
                        <Label fx:id="scoreLabel"
                               text="0"
                               style="-fx-text-fill: #4ade80;
                                      -fx-font-size: 28;
                                      -fx-font-weight: bold;"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="2">
                        <Label text="HIGH SCORE"
                               style="-fx-text-fill: #333344;
                                      -fx-font-size: 9;
                                      -fx-font-weight: bold;
                                      -fx-letter-spacing: 2;"/>
                        <Label fx:id="highScoreLabel"
                               text="0"
                               style="-fx-text-fill: #888899;
                                      -fx-font-size: 28;
                                      -fx-font-weight: bold;"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="2">
                        <Label text="LEVEL"
                               style="-fx-text-fill: #333344;
                                      -fx-font-size: 9;
                                      -fx-font-weight: bold;
                                      -fx-letter-spacing: 2;"/>
                        <Label fx:id="levelLabel"
                               text="1"
                               style="-fx-text-fill: #60a5fa;
                                      -fx-font-size: 28;
                                      -fx-font-weight: bold;"/>
                    </VBox>

                </HBox>
            </VBox>
        </top>

        <!-- CENTER: Game grid with border and padding -->
        <center>
            <StackPane style="-fx-padding: 20 43 35 43;">

                <!-- Outer glow border -->
                <StackPane style="-fx-background-color: #4aaade;
                                  -fx-background-radius: 4;
                                  -fx-effect: dropshadow(gaussian, #4aaade80, 18, 0.3, 0, 0);">

                    <!-- Inner background -->
                    <StackPane style="-fx-background-color: #0a1628;
                                      -fx-background-radius: 3;
                                      -fx-padding: 2;">

                        <!-- The game grid — controller fills this with cells -->
                        <GridPane fx:id="grid"
                                  hgap="1" vgap="1"
                                  style="-fx-background-color: #0a1628;"/>

                    </StackPane>
                </StackPane>
            </StackPane>
        </center>

        <!-- BOTTOM: Controls hint -->
        <bottom>
            <HBox alignment="CENTER" spacing="24"
                  style="-fx-padding: 12 32 20 32;
                         -fx-border-color: #1a1a2e transparent transparent transparent;
                         -fx-border-width: 2 0 0 0;">

                <HBox spacing="6" alignment="CENTER">
                    <Label text="↑ ↓ ← →"
                           style="-fx-text-fill: #2a2a3e;
                                  -fx-font-size: 12;
                                  -fx-background-color: #1a1a2e;
                                  -fx-background-radius: 4;
                                  -fx-padding: 3 8;"/>
                    <Label text="MOVE"
                           style="-fx-text-fill: #333344;
                                  -fx-font-size: 9;
                                  -fx-font-weight: bold;
                                  -fx-letter-spacing: 1;"/>
                </HBox>

                <HBox spacing="6" alignment="CENTER">
                    <Label text="ESC"
                           style="-fx-text-fill: #2a2a3e;
                                  -fx-font-size: 12;
                                  -fx-background-color: #1a1a2e;
                                  -fx-background-radius: 4;
                                  -fx-padding: 3 8;"/>
                    <Label text="PAUSE"
                           style="-fx-text-fill: #333344;
                                  -fx-font-size: 9;
                                  -fx-font-weight: bold;
                                  -fx-letter-spacing: 1;"/>
                </HBox>

            </HBox>
        </bottom>

    </BorderPane>

</StackPane>
